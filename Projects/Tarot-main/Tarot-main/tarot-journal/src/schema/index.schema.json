  "title": "Tarot Journal Index",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "title": { "type": "string" },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "cards": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "required": ["id", "title", "tags", "cards"]
  }
}
